<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llAlertDailog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/miniPadding"
        android:layout_marginRight="@dimen/miniPadding"
        android:foregroundGravity="center"
        android:visibility="visible"
        app:cardCornerRadius="@dimen/smallPadding"
        app:cardElevation="@dimen/smallPadding"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/miniPadding">

            <com.gonext.callreminder.utils.view.CustomTextView
                android:id="@+id/dialogTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mediumPadding"
                android:gravity="center"
                android:text="@string/alert"
                app:custom_font="novecentosanswide_book"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/normalSize"

                />

            <com.gonext.callreminder.utils.view.CustomTextView
                android:id="@+id/dialogText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxlargePadding"
                android:gravity="center"
                app:custom_font="novecentosanswide_medium"
                android:text="@string/do_you_want_to_delete"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/normalSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="@dimen/mediumPadding"
                android:layout_marginTop="@dimen/mediumPadding"
                android:gravity="end|center_horizontal">

                <com.gonext.callreminder.utils.view.CustomTextView
                    android:id="@+id/tvYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xxlargePadding"
                    android:layout_marginRight="@dimen/mediumPadding"
                    android:layout_marginTop="@dimen/microPadding"
                    android:text="@string/yes"
                    app:custom_font="novecentosanswide_normal"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/extraMediumSize" />

                <com.gonext.callreminder.utils.view.CustomTextView
                    android:id="@+id/tvNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/microPadding"
                    android:padding="@dimen/extraMediumPadding"
                    android:text="@string/no"
                    app:custom_font="novecentosanswide_normal"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/extraMediumSize" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>