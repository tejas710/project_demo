<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gonext.callreminder.activities.SettingActivity"
    tools:showIn="@layout/activity_setting">

    <ScrollView
        android:layout_above="@+id/rlAds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:id="@+id/llDefaultReminderTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/miniPadding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/normalPadding">

                    <ImageView
                        android:src="@drawable/remindertime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:tint="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.gonext.callreminder.utils.view.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/largePadding"
                            app:custom_font="novecentosanswide_book"
                            android:text="@string/default_reminder_time"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/largeSize"
                            android:visibility="visible" />

                        <com.gonext.callreminder.utils.view.CustomTextView
                            android:id="@+id/tvDefaultReminderValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/largePadding"
                            android:layout_marginTop="@dimen/microPadding"
                            android:text="@string/_15_minutes"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/normalSize"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/llNotificationSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/miniPadding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/normalPadding">

                    <ImageView
                        android:src="@drawable/notificationsetting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:tint="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <com.gonext.callreminder.utils.view.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/largePadding"
                            app:custom_font="novecentosanswide_book"
                            android:text="@string/notifiaction_settings"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/largeSize"
                            android:visibility="visible" />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/llAfterCallWindow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/miniPadding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:padding="@dimen/normalPadding">

                    <ImageView
                        android:src="@drawable/aftercallwindow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:tint="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.gonext.callreminder.utils.view.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/largePadding"
                            app:custom_font="novecentosanswide_book"
                            android:text="@string/after_call_window"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/largeSize"
                            android:visibility="visible" />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/llCallNotesSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/miniPadding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/normalPadding">

                    <ImageView
                        android:src="@drawable/callnote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:tint="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.gonext.callreminder.utils.view.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/largePadding"
                            app:custom_font="novecentosanswide_book"
                            android:text="@string/call_note_settings"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/largeSize"
                            android:visibility="visible" />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/llCalendarAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/miniPadding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/normalPadding">

                    <ImageView
                        android:src="@drawable/calendarsync"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:tint="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_marginLeft="@dimen/miniPadding"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.gonext.callreminder.utils.view.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/largePadding"
                                android:text="@string/calendar_sync"
                                app:custom_font="novecentosanswide_book"
                                android:layout_toLeftOf="@+id/switchCalendarSync"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/largeSize"
                                android:visibility="visible" />
                            <Switch
                                android:checked="true"
                                android:layout_marginRight="@dimen/miniPadding"
                                android:layout_alignParentRight="true"
                                android:id="@+id/switchCalendarSync"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/llShareApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/miniPadding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/normalPadding">

                    <ImageView
                        android:src="@drawable/shareapp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:tint="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.gonext.callreminder.utils.view.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/largePadding"
                            app:custom_font="novecentosanswide_book"
                            android:text="@string/share_app"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/largeSize"
                            android:visibility="visible" />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/llPrivacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/miniPadding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/normalPadding">

                    <ImageView
                        android:src="@drawable/privacypolicy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:tint="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.gonext.callreminder.utils.view.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/largePadding"
                            app:custom_font="novecentosanswide_book"
                            android:text="@string/privacy_policy"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/largeSize"
                            android:visibility="visible" />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <include
        layout="@layout/layout_banner_ads"></include>
</RelativeLayout>
