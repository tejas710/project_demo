<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="@dimen/largePadding"
    android:layout_marginLeft="@dimen/largePadding"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cvContactSuggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.gonext.callreminder.utils.view.CustomTextView
                android:id="@+id/tvContactName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/ivContactImage"
                android:padding="@dimen/smallPadding"
                app:custom_font="novecentosanswide_book"
                android:text="" />

            <com.gonext.callreminder.utils.view.CustomTextView
                android:id="@+id/tvContactNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvContactName"
                android:layout_toLeftOf="@+id/ivContactImage"
                android:padding="@dimen/smallPadding"
                app:custom_font="novecentosanswide_medium"
                android:text="" />

            <ImageView
                android:id="@+id/ivContactImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/miniPadding"
                android:src="@drawable/ic_profile" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>