<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/tinyPadding"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/color_card_bg"
    app:cardCornerRadius="@dimen/smallPadding"
    app:cardElevation="@dimen/tinyPadding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/smallPadding">



        <com.gonext.callreminder.utils.view.CustomTextView
            android:id="@+id/tvRateAppMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/largePadding"
            android:lineSpacingExtra="1dp"
            android:paddingLeft="@dimen/tinyPadding"
            android:paddingRight="@dimen/tinyPadding"
            android:paddingTop="@dimen/smallPadding"
            android:text="@string/confirm_msg_text"
            android:textColor="@color/color1"
            android:textSize="@dimen/extraMediumSize" />
        <com.gonext.callreminder.utils.view.CustomTextView
            android:id="@+id/tvRecommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/miniPadding"
            android:lineSpacingExtra="1dp"
            android:paddingLeft="@dimen/tinyPadding"
            android:paddingRight="@dimen/tinyPadding"
            android:paddingTop="@dimen/miniPadding"
            android:text="@string/recommend_msg"
            android:textColor="@color/color1"
            android:textSize="@dimen/extraMediumSize" />

        <RelativeLayout
            android:id="@+id/rlRateButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/tinyPadding">



            <com.gonext.callreminder.utils.view.CustomTextView
                android:id="@+id/tvCancel"
                style="@style/DialogOptionsBtnStyle"
                android:padding="@dimen/miniPadding"
                android:layout_toLeftOf="@+id/tvUnchecked"
                android:text="@string/cancel"
                android:textColor="@color/colorAccent"
                app:custom_font="novecentosanswide_book" />

            <com.gonext.callreminder.utils.view.CustomTextView
                android:id="@+id/tvUnchecked"
                android:padding="@dimen/miniPadding"
                style="@style/DialogOptionsBtnStyle"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingLeft="@dimen/smallPadding"
                android:paddingStart="@dimen/smallPadding"
                android:text="@string/uncheck"
                android:textColor="@color/colorPrimary"
                app:custom_font="novecentosanswide_book" />

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>